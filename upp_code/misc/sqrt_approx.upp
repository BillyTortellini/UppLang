#import"printing.upp"

absolute::(x:float)=>float
	if x<0.0
		return-x
	return x

sqrt_approx::(x:float,error_delta:float)=>float
	min:float=0.0
	max:=x
	while true
		approx:=(min+max)/2.0
		reverted:=approx*approx
		if absolute(reverted-x)<=error_delta
			return approx
		
		if reverted>x
			max=approx
		else
			min=approx
	return 0

main::()
	delta:=0.1
	x:=64
	print_formated("sqrt(%) = %",.[x,sqrt_approx(x,delta)])
