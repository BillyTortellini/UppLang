

int_to_bool :: (a: int) => bool
	return a % 2 == 0

main :: ()
	// The operator-context allows users to define custom casts
	context add_cast(int_to_bool, .IMPLICIT)
	// The supplied function must have exactly one parameter and a return-type
	
	value: int = 15
	boolean: bool = value
	assert(!boolean)
	assert(cast{bool} 12)
